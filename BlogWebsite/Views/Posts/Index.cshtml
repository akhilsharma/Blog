@model IEnumerable<BlogWebsite.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@foreach (var item in Model)
{
<div class="jumbotron">
    <h2>@item.Title</h2>
    <div class="row">
        <div class="col-md-8">
            <img src="~/image/tag.png" height="20" width="20" />
            @foreach (var tag in item.Tags)
            {
            <label>
                @tag.Name |
            </label>
            }
        </div>
        <div class="col-md-4">
            <label>@item.Date</label>
        </div>
    </div>
    <div class="row">
        <p class="lead">@item.Text.Substring(0,100)...</p>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label style="font-size :smaller">Views: @item.Views</label>
        </div>
        <div class="col-md-3">
            <label style="font-size :smaller">By: @item.Author</label>
        </div>
        <div class="col-md-6">
            <p style="text-align:right"><a href="~/Posts/Details/@item.ID" class="btn btn-primary btn-lg">View Post &raquo;</a></p>
        </div>
    </div>
</div>
}
