@model BlogWebsite.Models.RegisterModel
@{
    ViewBag.Title = "ShowProfile";
}

<h2>ShowProfile</h2>

@using (Html.BeginForm())
{
        @Html.AntiForgeryToken()
        <h4>Update</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Username, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { @class = "form-control" })
            </div>
        </div><div>&nbsp;</div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { @class = "form-control" })
            </div>
        </div><div>&nbsp;</div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Update" />
            </div>
        </div>

}