@model BlogWebsite.Models.ProfileView
@{
    ViewBag.Title = "ShowProfile";
   
}

<h2>ShowProfile</h2>

@using (Html.BeginForm("ShowProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
        @Html.AntiForgeryToken()
        <h4>Update</h4>
        <hr /><img src="@Url.Action("GetImage", "Account", new { Model.Register.Username })" style="width: 180px;" /> 
        <input type="file" name="file" style="margin-top:5px;" />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Register.Username, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Register.Username, new { @class = "form-control" })
            </div>
        </div><div>&nbsp;</div>
        <div class="form-group">
            @Html.LabelFor(model => model.Register.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Register.Email, new { @class = "form-control" })
            </div>
        </div><div>&nbsp;</div>
        <div class="form-group">
            @Html.LabelFor(model => model.ath.Expertise, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ath.Expertise, new { @class = "form-control" })
            </div>
        </div><div>&nbsp;</div>
        <div class="form-group">
            @Html.LabelFor(model => model.ath.About, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ath.About, new { @class = "form-control" })
            </div>
        </div><div>&nbsp;</div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Update" />
            </div>
        </div>

}